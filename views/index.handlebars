<div class="row article-row">
    <div class="col-md-12 ">
        {{#each data}}
        <div id="Article-Card" class="card">
            <div class="card-body">
                <h5 class="card-title alert alert-dark"> {{title}} </h5>
                <hr>
                <p class="card-text">{{description}}</p>
                <a href="{{link}}" target="_blank" class="btn btn-primary">Read Article </a>
                <button class="btn btn-success saveArticle-btn" data-id={{this._id}} data-toggle="modal" data-target="#ArticleSavedModal" > Save Article</A></button>
                <a href="/addComments/{{this._id}}" id="commentbtn"><img src="/assets/images/comments-img.png"
                        width="40px" height="40px"></a>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="ArticleSavedModal" tabindex="-1" role="dialog" aria-labelledby="savedModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="savedModalLabel"> </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body text-center">
                        <h5> Article Saved </h5>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>